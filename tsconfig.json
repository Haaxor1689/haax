{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"noUncheckedIndexedAccess": true
	},
	"files": ["./restructure.d.ts"],
	"include": ["**/*.ts"],
	"exclude": ["node_modules"],
	"ts-node": { "esm": true }
}
